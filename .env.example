# Unfold Configuration Environment Variables
# Copy this file to .env and modify values as needed

# LLM Service Configuration
UNFOLD_LLM_PROVIDER=ollama
UNFOLD_LLM_MODEL=llama3.2
UNFOLD_LLM_BASE_URL=http://localhost:11434
UNFOLD_LLM_API_KEY=
UNFOLD_LLM_TEMPERATURE=0.7
UNFOLD_LLM_MAX_TOKENS=2048
UNFOLD_LLM_TIMEOUT=30.0

# Vector Database Configuration (Milvus)
UNFOLD_VECTOR_DB_HOST=localhost
UNFOLD_VECTOR_DB_PORT=19530
UNFOLD_VECTOR_DB_ENABLED=true
UNFOLD_VECTOR_DB_USE_MILVUS_LITE=true
UNFOLD_VECTOR_DB_LOCAL_PATH=./knowledge/vector.db
UNFOLD_VECTOR_DB_EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B

# Graph Database Configuration
UNFOLD_GRAPH_DB_PROVIDER=networkx
UNFOLD_GRAPH_DB_URI=bolt://localhost:7687
UNFOLD_GRAPH_DB_USER=neo4j
UNFOLD_GRAPH_DB_PASSWORD=password
UNFOLD_GRAPH_DB_DATABASE=unfold
UNFOLD_GRAPH_DB_ENABLED=true

# MCP Server Configuration
UNFOLD_MCP_HOST=localhost
UNFOLD_MCP_PORT=8000
UNFOLD_MCP_ENABLED=true

# AI Assistant Configuration
UNFOLD_AI_ENABLED=true
UNFOLD_AI_STREAMING=true
UNFOLD_AI_CONTEXT_WINDOW=20

